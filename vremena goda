import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in); // создаем сканер для ввода
        boolean exit = false; // флаг для выхода из цикла
        while (!exit) { // бесконечный цикл
            System.out.println("Введите номер поры года (1-4) или 5 для выхода:");
            String input = scanner.nextLine(); // считываем строку
            if (input.equals("exit")) { // если ввели exit
                exit = true; // меняем флаг на true
                System.out.println("Выход из программы"); // выводим сообщение
                break; // прерываем цикл
            }
            int number = Integer.parseInt(input); // преобразуем строку в число
            switch (number) { // проверяем число с помощью switch
                case 1: // если 1
                    System.out.println("Зима"); // выводим зима
                    break; // прерываем switch
                case 2: // если 2
                    System.out.println("Весна"); // выводим весна
                    break; // прерываем switch
                case 3: // если 3
                    System.out.println("Лето"); // выводим лето
                    break; // прерываем switch
                case 4: // если 4
                    System.out.println("Осень"); // выводим осень
                    break; // прерываем switch
                case 5: // если 5
                    exit = true; // меняем флаг на true
                    System.out.println("Выход из программы"); // выводим сообщение
                    break; // прерываем switch
                default: // если не один из вариантов
                    System.out.println("Неверный ввод"); // выводим сообщение
                    break; // прерываем switch
            }
        }
        scanner.close(); // закрываем сканер
    }
}
